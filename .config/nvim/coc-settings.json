{
    "coc.preferences.jumpCommand": "split",
    "languageserver": {
        "clangd": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "h", "hpp"],
            "rootPatterns": ["compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
