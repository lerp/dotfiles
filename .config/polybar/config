[colors]
background = #1c1c1c
foreground = #c5c8c6
red        = #cc6666
orange     = #de935f
yellow     = #f0c674
green      = #b5bd68
aqua       = #8abeb7
blue       = #81a2be
purple     = #b294bb
grey       = #282a2e

[bar/top]
monitor = ${env:MONITOR}
width = 100%
height = 20
padding-right = 2
padding-left  = 2
module-margin = 2

font-0 = "LiberationSans:size=9;2"
font-1 = "Material Icons:size=14;2"

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 1
border-bottom-size = 2
border-bottom-color = ${colors.grey}

modules-right = battery clock
modules-center = bspwm
wm-restack = bspwm

[module/clock]
type = internal/date
date = %H:%M %d-%m-%Y
interval = 5

[module/bspwm]
type = internal/bspwm
enable-click = true

label-focused = %name%
label-focused-padding = 2
label-focused-underline = ${colors.blue}

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%
label-urgent-foreground = ${colors.red}

label-empty =

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
label-charging = + %percentage%%
label-discharging = - %percentage%% (%time%)

