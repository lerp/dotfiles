[colors]
background = #1c1c1c
foreground = #c5c8c6
red        = #cc6666
orange     = #de935f
yellow     = #f0c674
green      = #b5bd68
aqua       = #8abeb7
blue       = #81a2be
purple     = #b294bb
grey       = #282a2e

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 20
padding-right = 2
padding-left  = 2
module-margin = 2

font-0 = NotoSans-Regular:size=9;2
font-1 = "Font Awesome 5 Brands":size=10;0
font-2 = "Font Awesome 5 Free":size=10;0

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 1
border-bottom-size = 2
border-bottom-color = ${colors.grey}

modules-left = spotify
modules-right = battery volume clock
modules-center = bspwm
wm-restack = bspwm

tray-position = right

[module/clock]
type = custom/script
exec = ~/.config/polybar/scripts/popup-calendar.sh
interval = 5
click-left = ~/.config/polybar/scripts/popup-calendar.sh --popup

[module/bspwm]
type = internal/bspwm
enable-click = true

label-focused = %name%
label-focused-padding = 2
label-focused-underline = ${colors.blue}

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%
label-urgent-foreground = ${colors.red}

label-empty =

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
label-charging = + %percentage%%
label-discharging = - %percentage%% (%time%)

[module/volume]
type = internal/alsa
format-volume = <ramp-volume><label-volume>
label-muted =  0%
label-muted-foreground = #66
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python3 ~/.config/polybar/scripts/spotify_status.py -f '{artist} - {song}'
;control players (optional)
click-left = playerctl --player=spotify play-pause 
click-right = playerctl --player=spotify next 
click-middle = playerctl --player=spotify previous 
